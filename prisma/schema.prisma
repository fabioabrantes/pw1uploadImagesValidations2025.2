generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String   @id @default(uuid())
  cpf      String   @unique
  name     String
  email    String   @unique
  password String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  books Book[]

  @@map("users")
}

model Book {
  id          String   @id @default(uuid())
  ISBN        String   @unique
  title       String
  author      String
  description String?
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt

  userIdFK String
  user     User   @relation(fields: [userIdFK], references: [id], onDelete: Cascade, onUpdate: Cascade)

  images ImageBook[]

  @@map("books")
}

model ImageBook {
  id          String   @id @default(uuid())
  pictureName String   @map("picture_name")
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt

  bookId String
  book   Book   @relation(fields: [bookId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("images_book")
}
